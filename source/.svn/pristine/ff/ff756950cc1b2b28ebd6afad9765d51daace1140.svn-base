<QueryDefinition>
	<Query>
		select distinct hp_id, dept from dbo.Drug
		UNION
		select distinct hp_id, dept from dbo.Treatment
		UNION
		select distinct hp_id, dept from dbo.Diagnosis

	</Query>
	<Providers>
		<ProviderDefinition>
			<CareSiteId>hp_id</CareSiteId>s
			<Concepts>
				<Concept>
					<ConceptIdMappers>
						<Mapper>
							<File>JMDC\Lookups\ProviderType.txt</File>
						</Mapper>
					</ConceptIdMappers>
					<Fields>
						<Field key="dept"/>
					</Fields>
				</Concept>
			</Concepts>
		</ProviderDefinition>
	</Providers>
</QueryDefinition>